{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "baseUrl": "src",
    "importHelpers": true,
    "paths": {
      "@components/*": [
        "shared/components/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@styles/*": [
        "scss/*"
      ],
      "core-js/es7/reflect": [
        "../node_modules/core-js/proposals/reflect-metadata"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "module": "es2015"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": false
}
